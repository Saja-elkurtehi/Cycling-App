<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>


    <ListView
        android:id="@+id/listViewParticipants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"/>


    <Button
        android:id="@+id/btnAcceptParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Participants"
        android:layout_marginTop="16dp"/>


    <EditText
        android:id="@+id/editTextEventDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Event Details"
        android:gravity="top"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/btnCommunicate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Communicate Event Details"
        android:layout_marginTop="16dp"/>
</LinearLayout>